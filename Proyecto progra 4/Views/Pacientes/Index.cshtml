@model IEnumerable<Proyecto_progra_4.Models.PacientesModel>

@{
    ViewBag.Title = "Index";
}

<h2>Consulta de pacientes</h2>

<a href="/Pacientes/Create" class="btn btn-success"> Crear nuevo Paciente </a>
<table class="table">

