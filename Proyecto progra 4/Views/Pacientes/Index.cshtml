            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo_de_Sangre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eliminado)
            </td>
            <td>

                <a href="/Pacientes/Edit?id=@item.IdPacientes" class="btn btn-warning">Editar </a>
                <button class="btn btn-info" data-toggle="modal" data-target="#detailsModal" onclick="CargarDetalle(@item.IdPacientes)">Detalle</button>
                <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" onclick="CargarEliminar(@item.IdPacientes)">Eliminar</button>
